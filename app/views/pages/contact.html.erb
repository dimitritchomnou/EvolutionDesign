                <div class="col-md-4">
                    <p>Téléphone:
                        <strong>(+237) 674 83 59 37 </strong>
                    </p>
                    <p>Email:
                        <strong><a href="mailto:name@example.com">brassack86@yahoo.fr</a></strong>
                    </p>
                    <p>Address:
                        <strong>BP 6740 Douala Cameroun</strong>
                    </p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Formulaire de
                        <strong>Contact</strong>
                    </h2>
                    <hr>
                    <br />
                    <div class="row">
                        <%= form_tag contact_post_pages_path, method: 'POST', id: 'contactMessage' do %>
                        <div class='form-group col-lg-4'>
                           <label>Name</label>
                          <input autofocus="autofocus" class="form-control" id="user_name" name="name" placeholder="Nom" required="required" type="text" />
                        </div>

                        <div class='form-group col-lg-4'>
                            <label>Email Address</label>
                          <input class="form-control" id="user_email" name="email" placeholder="Email" required="required" type="email" value="" />
                        </div>

                        <div class='form-group col-lg-4'>
                            <label>Téléphone</label>
                          <input class="form-control" id="user_phone" name="phone" placeholder="Téléphone" required="required" type="tel" />
                        </div>
    
                        <div class="form-group col-lg-12">
                         <label>Message</label>
                         <textarea class="form-control" name="message" rows="6"></textarea>
                        </div>
                        <div class="form-group col-lg-12">
                          <input name="commit" onclick="return validateCheckbox();" type="hidden" value="Envoyer"/>
                          <button type="submit" class="btn btn-default">Envoyé</button>
                        </div>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>

    </div>
